 # Define source and destination paths
$sourcePath = "C:\SharedDriveFolder\"  # Replace with your shared drive folder path
$destinationPath = "C:\Users\YourUsername\OneDrive\DestinationFolder\"  # Replace with your OneDrive folder path

# Get all files from the source directory
Get-ChildItem -Path $sourcePath -File | ForEach-Object {
    # Copy each file to the destination directory with overwrite
    Copy-Item -Path $_.FullName -Destination $destinationPath -Force
}

Write-Host "Files copied successfully from $sourcePath to $destinationPath"
