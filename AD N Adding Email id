# Define the shared drive path
$sharedDriveFolderPath = "\\ServerName\SharedFolder"  # Replace with your shared drive path

# Check if the shared drive is accessible
if (Test-Path $sharedDriveFolderPath) {
    Write-Host "Shared drive is connected."

    # List the files in the shared drive folder
    $files = Get-ChildItem -Path $sharedDriveFolderPath

    if ($files.Count -gt 0) {
        Write-Host "Files in the shared drive:"
        $files | ForEach-Object { Write-Host $_.Name }
    } else {
        Write-Host "No files found in the shared drive folder."
    }
} else {
    Write-Host "Shared drive is not connected."
}
