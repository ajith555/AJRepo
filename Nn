Sub SendEmailFromOutlook()
    Dim OutApp As Object
    Dim OutMail As Object
    
    ' Create Outlook Application object
    Set OutApp = CreateObject("Outlook.Application")
    
    ' Create a new email item
    Set OutMail = OutApp.CreateItem(0)
    
    ' Set the sender's email address (send on behalf of)
    OutMail.SentOnBehalfOfName = "kushal-ajith.shetty@abc.com"
    
    ' Compose the email
    With OutMail
        .To = "recipient@example.com" ' Replace with the recipient's email address
        .Subject = "Subject of the email"
        .Body = "This is the body of the email."
        ' You can use .HTMLBody for HTML-formatted email content
        .Send ' Uncomment this line to send the email immediately
    End With
    
    ' Clean up objects
    Set OutMail = Nothing
    Set OutApp = Nothing
End Sub
