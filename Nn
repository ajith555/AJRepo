let
    Source = Exchange.Contents("kushal-ajith.shetty@ubs.com"),
    Mail1 = Source{[Name="Mail"]}[Data],
    
    // Step 1: Add a custom column to identify matching sent emails
    AddMatchingSentEmail = Table.AddColumn(Mail1, "MatchingSentEmail", each 
        Table.SelectRows(Mail1, each [Folder Path] = "\Sent Items\" and Text.StartsWith([Subject], "RE: " & [Subject])).{0}),
    
    // Step 2: Calculate the response time in minutes
    AddResponseTimeMinutes = Table.AddColumn(AddMatchingSentEmail, "ResponseTimeMinutes", each 
        if [MatchingSentEmail] <> null then 
            Duration.From([DateTimeReceived] - [MatchingSentEmail][DateTimeReceived])[TotalMinutes] 
        else null)
in
    AddResponseTimeMinutes
