# Define the source directory
$source = "C:\SourceFolder"

# Define the destination directory and construct the new folder name
$destinationBase = "C:\DestinationFolder"
$currentMonth = (Get-Date).ToString("MMMM") # Current month name
$currentYear = (Get-Date).ToString("yyyy")   # Current year
$folderName = "Files Sent_$currentMonth_$currentYear"
$destination = Join-Path -Path $destinationBase -ChildPath $folderName

# Create the destination directory if it doesn't exist
if (-not (Test-Path $destination)) {
    New-Item -Path $destination -ItemType Directory
}

# Copy all files and subdirectories from the source to the destination
Copy-Item -Path $source\* -Destination $destination -Recurse -Force
