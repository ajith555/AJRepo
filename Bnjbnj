# Path to the CSV file
$csvFilePath = "P:\Invision\URLZIP.csv"

# Import CSV
$urls = Import-Csv -Path $csvFilePath

# Check if LastChecked column exists, if not, initialize it
if ($urls[0].PSObject.Properties.Name -notcontains "LastChecked") {
    foreach ($url in $urls) {
        $url | Add-Member -MemberType NoteProperty -Name "LastChecked" -Value $null
    }
}

# Loop through each URL
foreach ($url in $urls) {
    # Open URL in Chrome
    Start-Process "chrome.exe" -ArgumentList $url.Url

    # Wait for the download to complete
    $fileDownloaded = $false
    while (-not $fileDownloaded) {
        Start-Sleep -Seconds 1
        $downloadedFiles = Get-ChildItem -Path $env:USERPROFILE\Downloads | Where-Object { $_.LastWriteTime -gt $url.LastChecked }

        if ($downloadedFiles.Count -gt 0) {
            # Update the CSV with the downloaded file name
            $url.FileName = $downloadedFiles[0].Name
            $fileDownloaded = $true
        } elseif ((Get-Process -Name "chrome" -ErrorAction SilentlyContinue) -eq $null) {
            # If Chrome process is not found, break the loop
            break
        }
    }

    # If no file downloaded, update FileName as "Error"
    if (-not $fileDownloaded) {
        $url.FileName = "Error"
    }

    # Update LastChecked time
    $url.LastChecked = Get-Date

    # Close Chrome
    Get-Process -Name "chrome" | Stop-Process -Force

    # Export updated URL list to CSV
    $urls | Export-Csv -Path $csvFilePath -NoTypeInformation -Force

    # Kill Chrome after processing every 50 URLs
    if (($urls.IndexOf($url) + 1) % 50 -eq 0) {
        # Wait for 5 seconds before killing Chrome
        Start-Sleep -Seconds 5

        # Kill Chrome
        taskkill /IM "chrome.exe" /F /T
    }
}

# Close Chrome after processing all URLs
Start-Sleep -Seconds 5
taskkill /IM "chrome.exe" /F /T
