Sub ExportRules()
    Dim rules As Outlook.Rules
    Dim rule As Outlook.Rule
    Dim exportFile As String
    Dim fileNumber As Integer
    
    ' Specify the file path for export
    exportFile = "C:\Path\To\ExportedRules.csv" ' Change the path and filename as needed
    
    ' Open a file for writing
    fileNumber = FreeFile
    Open exportFile For Output As fileNumber
    
    ' Set a reference to the Rules collection
    Set rules = Application.Session.DefaultStore.GetRules
    
    ' Loop through each rule and export information
    For Each rule In rules
        Print #fileNumber, "Rule Name: " & rule.Name
        Print #fileNumber, "Conditions: " & GetRuleConditions(rule)
        Print #fileNumber, "Actions: " & GetRuleActions(rule)
        Print #fileNumber, "----------------------"
    Next rule
    
    ' Close the file
    Close fileNumber
    
    MsgBox "Rules exported successfully!", vbInformation
End Sub

Function GetRuleConditions(rule As Outlook.Rule) As String
    ' Function to get rule conditions as a string
    Dim condition As Outlook.RuleCondition
    Dim conditionsString As String
    
    For Each condition In rule.Conditions
        conditionsString = conditionsString & GetConditionDetails(condition) & "; "
    Next condition
    
    GetRuleConditions = conditionsString
End Function

Function GetConditionDetails(condition As Outlook.RuleCondition) As String
    ' Function to get details of a rule condition
    Dim conditionString As String
    
    Select Case condition.ConditionType
        Case olConditionFrom
            conditionString = "From: " & condition.From.Address
        Case olConditionSubject
            conditionString = "Subject: " & condition.Text
        Case olConditionBody
            conditionString = "Body: " & condition.Text
        ' Add more cases for other condition types as needed
        Case Else
            conditionString = "Unknown Condition Type"
    End Select
    
    GetConditionDetails = conditionString
End Function

Function GetRuleActions(rule As Outlook.Rule) As String
    ' Function to get rule actions as a string
    Dim action As Outlook.RuleAction
    Dim actionsString As String
    
    For Each action In rule.Actions
        actionsString = actionsString & GetActionDetails(action) & "; "
    Next action
    
    GetRuleActions = actionsString
End Function

Function GetActionDetails(action As Outlook.RuleAction) As String
    ' Function to get details of a rule action
    Dim actionString As String
    
    Select Case action.ActionType
        Case olRuleActionMoveToFolder
            actionString = "Move to Folder: " & action.Folder.FolderPath
        Case olRuleActionDelete
            actionString = "Delete"
        ' Add more cases for other action types as needed
        Case Else
            actionString = "Unknown Action Type"
    End Select
    
    GetActionDetails = actionString
End Function
