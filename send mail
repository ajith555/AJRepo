Sub ListRules()
    Dim olApp As Outlook.Application
    Dim olSession As Outlook.NameSpace
    Dim olRules As Outlook.Rules
    Dim olRule As Outlook.Rule
    
    ' Create Outlook application and session objects
    Set olApp = New Outlook.Application
    Set olSession = olApp.GetNamespace("MAPI")
    
    ' Get the Rules collection
    Set olRules = olSession.DefaultStore.GetRules
    
    ' Check if there are any rules
    If olRules.Count = 0 Then
        MsgBox "No rules found in your Outlook account."
    Else
        ' Loop through each rule
        For Each olRule In olRules
            ' Print rule information (you can customize this part)
            Debug.Print "Rule Name: " & olRule.Name
            Debug.Print "Enabled: " & olRule.Enabled
            Debug.Print "Execution Order: " & olRule.ExecutionOrder
            Debug.Print "Conditions: " & olRule.Conditions.Description
            Debug.Print "Actions: " & olRule.Actions.Description
            Debug.Print "==============================="
        Next olRule
    End If
    
    ' Clean up objects
    Set olRule = Nothing
    Set olRules = Nothing
    Set olSession = Nothing
    Set olApp = Nothing
End Sub
