# Set the path to your CSV file
$csvPath = "C:\path\to\your\file.csv"

# Read the CSV file
$urls = Import-Csv -Path $csvPath

# Define the Chrome executable path
$chromePath = "C:\Program Files\Google\Chrome\Application\chrome.exe"

# Define the download directory
$downloadDirectory = "C:\Users\YourUsername\Downloads"  # Adjust as per your system

# Open Chrome once
$chromeProcess = Start-Process -FilePath $chromePath -ArgumentList "--new-window", $urls[0].C -PassThru

# Loop through each URL in the CSV, starting from the second one
foreach ($url in $urls[1..$urls.Count]) {
    # Open new window with the URL
    Start-Process -FilePath $chromePath -ArgumentList "--new-window", $url.C -PassThru

    # Wait for 30 seconds
    Start-Sleep -Seconds 30

    # Check if a file has been downloaded
    $downloadedFiles = Get-ChildItem -Path $downloadDirectory
    $fileDownloaded = $false
    $downloadedFileName = $null
    foreach ($file in $downloadedFiles) {
        if ($file.Extension -eq ".crdownload" -or $file.Extension -eq ".tmp") {
            # Skip files being currently downloaded
            continue
        }
        elseif ($file.LastWriteTime -ge (Get-Date).AddSeconds(-30)) {
            # File has been downloaded within the last 30 seconds
            $fileDownloaded = $true
            $downloadedFileName = $file.Name
            break
        }
    }

    # If file downloaded, close the previous window and update Excel
    if ($fileDownloaded) {
        # Close the previous window
        $chromeProcess.CloseMainWindow()
        
        # Update Excel with the downloaded file name
        $url | Add-Member -MemberType NoteProperty -Name "DownloadedFile" -Value $downloadedFileName
        $url | Export-Csv -Path $csvPath -NoTypeInformation -Append
    }
}
