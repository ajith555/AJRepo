UPDATE YourTable
SET SomeColumn = 'SomeValue'
WHERE
    (
        -- Check if the value is 'greater than' (e.g., >10 years)
        (INSTR('$strHeaderFiveValue$', '>') > 0 
        AND YEAR(CURRENT_DATE) - CAST(SUBSTRING([ReformattedDate], 7, 4) AS INT) > CAST(SUBSTRING('$strHeaderFiveValue$', 2, LENGTH('$strHeaderFiveValue$') - 6) AS INT))

        OR

        -- Check if the value is 'less than' (e.g., <10 years)
        (INSTR('$strHeaderFiveValue$', '<') > 0
        AND YEAR(CURRENT_DATE) - CAST(SUBSTRING([ReformattedDate], 7, 4) AS INT) < CAST(SUBSTRING('$strHeaderFiveValue$', 2, LENGTH('$strHeaderFiveValue$') - 6) AS INT))
    )
