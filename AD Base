<script type="text/javascript">
    // Function to display a success message
    function showSuccessMessage() {
        alert("Changes saved successfully!");
    }

    // Function to override the save button behavior
    function overrideSaveButton() {
        // Get the save button element
        var saveButton = document.querySelector("input[value='Save']");
        
        if (saveButton) {
            // Add an event listener to the save button
            saveButton.addEventListener("click", function(event) {
                event.preventDefault(); // Prevent the default save behavior
                showSuccessMessage(); // Show the success message
                
                // Optionally, you can trigger the actual save operation here
                // For example, you can use the SharePoint JSOM or REST API to save the changes
                // Execute the save operation here
                
                // If you don't want to trigger the actual save operation, you can remove the above comment and leave the function as it is
            });
        }
    }

    // Execute the override function when the page is loaded
    document.addEventListener("DOMContentLoaded", overrideSaveButton);
</script>
